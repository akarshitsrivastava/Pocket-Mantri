<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".LoginSignup">


 <ImageView
     android:id="@+id/logo"
     android:layout_width="180dp"
     android:layout_height="180dp"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="40dp"
     android:background="@drawable/pocket"

     />

 <View
     android:layout_width="300dp"
     android:layout_height="350dp"
     android:layout_centerHorizontal="true"
     android:layout_marginStart="10dp"
     android:layout_marginTop="146dp"
     android:layout_marginEnd="10dp"
     android:background="@drawable/viewbg" />

 <EditText
     android:id="@+id/editTextTextEmailAddress2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/logo"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="15dp"
     android:ems="10"
     android:hint="Username"
     android:inputType="textEmailAddress"
     android:textAlignment="center"
     android:singleLine="true"


     />

 <EditText
     android:id="@+id/editTextTextPassword2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@id/editTextTextEmailAddress2"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="8dp"
     android:ems="10"
     android:hint="Password"
     android:inputType="textPassword"
     android:textAlignment="center"
     android:singleLine="true"
     />

 <Button
     android:id="@+id/signin"
     android:layout_width="wrap_content"
     android:layout_height="20dp"
     android:layout_below="@+id/editTextTextPassword2"
     android:layout_marginStart="100dp"
     android:layout_marginTop="8dp"
     android:background="@drawable/loginbtn"
     android:onClick="signinclick"


     android:text="Sign In" />

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/editTextTextPassword2"
     android:layout_marginStart="200dp"
     android:layout_marginTop="6dp"
     android:onClick="forget"
     android:text="Forget Password ?"
     android:textColor="#A29E9C"
     android:id="@+id/forgetpass"
     />

 <TextView
     android:id="@+id/textviewforget"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@id/editTextTextPassword2"
     android:layout_centerHorizontal="true"
     android:layout_marginTop="40dp"
     android:text="Or Sign With"
     android:textColor="#000000"
     android:textSize="18sp" />

 <ImageButton
     android:id="@+id/googlelogo"
     android:layout_width="30dp"
     android:layout_height="30dp"
     android:layout_below="@id/textviewforget"
     android:layout_marginStart="150dp"
     android:layout_marginTop="13dp"
     android:background="@drawable/goog"

     />

 <ImageButton
     android:id="@+id/twitterlogo"
     android:layout_width="50dp"
     android:layout_height="50dp"
     android:layout_below="@id/textviewforget"
     android:layout_marginLeft="180dp"
     android:layout_marginTop="6dp"
     android:background="@drawable/twitterlogo" />

 <ImageButton
     android:id="@+id/facebooklogo"
     android:layout_width="60dp"
     android:layout_height="55dp"
     android:layout_below="@id/textviewforget"
     android:layout_marginStart="220dp"
     android:background="@drawable/facebooklogo"

     />

 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/googlelogo"
     android:layout_marginStart="90dp"
     android:layout_marginTop="14dp"
     android:text="Dont have an Account?"
     android:textColor="#A29E9C" />

 <TextView
     android:id="@+id/signupclick"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@+id/googlelogo"
     android:layout_marginStart="250dp"
     android:layout_marginTop="9dp"
     android:text="Sign Up"
     android:textColor="#2646F8"
     android:textSize="18dp"
     android:onClick="signupclick"
     />


</RelativeLayout>