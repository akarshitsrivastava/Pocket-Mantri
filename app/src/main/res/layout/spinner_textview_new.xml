<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llSpinner"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    app:cardUseCompatPadding="true"

    >

    <RelativeLayout
        android:id="@+id/rl_spinList"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="5dp">

        <ImageView
            android:id="@+id/ivOpretorImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/tatasky"
            android:scaleX=".75"
            android:scaleY=".75" />

        <TextView
            android:id="@+id/tv_opretor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:layout_toRightOf="@id/ivOpretorImage"
            android:text="@string/please_wait"
            android:textSize="13sp" />

    </RelativeLayout>

    <View
        android:id="@+id/ivSpinner"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#A29E9C"
        android:visibility="gone" />
</LinearLayout>