<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backscreen"
    tools:context=".Passbook">

    <TextView
        android:id="@+id/t_passbook"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bgbtn"
        android:text="PASSBOOK"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="25dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/credit_debit"
        android:layout_below="@id/t_passbook"
        android:layout_marginTop="85dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"

            android:gravity="center"
            android:padding="13dp"
            android:background="@drawable/challa">



        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bgbtn" />

        <TextView
            android:id="@+id/credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:text="Credit"
            android:textColor="#fff"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/credit"
            android:layout_marginStart="30dp"
            android:layout_marginTop="1dp"
            android:text="Rs. 80000"
            android:textColor="#000"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/debit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:text="Debit"
            android:textColor="#fff"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/debit"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:layout_marginRight="25dp"
            android:text="Rs. 30000"
            android:textColor="#000"
            android:textSize="30dp" />



    </RelativeLayout>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/credit_debit"
        android:layout_marginTop="20dp"
        android:id="@+id/passbook_details"
        />

</RelativeLayout>